<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            android:backgroundTint="@color/white"
            app:navigationIcon="@drawable/ic_baseline_close_24"
            style="@style/Widget.MaterialComponents.AppBarLayout.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.home.CreateHabitActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_layout_light">
                <ImageView
                    android:id="@+id/img_icon_new_habit"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_account_box_24"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Habit Name"
                    android:textColorHint="@color/primary"
                    app:hintTextColor="@color/primary"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/img_icon_new_habit"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_habit_name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="Habit Baru"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@color/black"
                        android:inputType="textPersonName"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                android:text="Ulangi"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_layout_light">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimen12"
                    android:layout_marginStart="@dimen/dimen12"
                    android:layout_marginBottom="@dimen/dimen12"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_title"
                    android:textColor="@color/accent_dark"
                    android:text="Ulangi Setiap:"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#F3F3F3" />
                <LinearLayout
                    android:id="@+id/layout_habit_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ToggleButton
                        android:id="@+id/tb_day_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dimen8"
                        android:layout_marginStart="@dimen/dimen12"
                        android:layout_marginBottom="@dimen/dimen12"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:checked="true"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_toggle_selector_date"
                        android:textOn="M"
                        android:textOff="M"/>
                    <ToggleButton
                        android:id="@+id/tb_day_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_toggle_selector_date"
                        android:layout_marginTop="@dimen/dimen8"
                        android:layout_marginStart="@dimen/dimen4"
                        android:layout_marginBottom="@dimen/dimen12"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:textOn="S"
                        android:textOff="S"/>
                    <ToggleButton
                        android:id="@+id/tb_day_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_toggle_selector_date"
                        android:layout_marginTop="@dimen/dimen8"
                        android:layout_marginStart="@dimen/dimen4"
                        android:layout_marginBottom="@dimen/dimen12"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:textOn="S"
                        android:textOff="S"/>
                    <ToggleButton
                        android:id="@+id/tb_day_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_toggle_selector_date"
                        android:layout_marginTop="@dimen/dimen8"
                        android:layout_marginStart="@dimen/dimen4"
                        android:layout_marginBottom="@dimen/dimen12"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:textOn="R"
                        android:textOff="R"/>
                    <ToggleButton
                        android:id="@+id/tb_day_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_toggle_selector_date"
                        android:layout_marginTop="@dimen/dimen8"
                        android:layout_marginStart="@dimen/dimen4"
                        android:layout_marginBottom="@dimen/dimen12"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:textOn="K"
                        android:textOff="K"/>
                    <ToggleButton
                        android:id="@+id/tb_day_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_toggle_selector_date"
                        android:layout_marginTop="@dimen/dimen8"
                        android:layout_marginStart="@dimen/dimen4"
                        android:layout_marginBottom="@dimen/dimen12"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:textOn="J"
                        android:textOff="J"/>
                    <ToggleButton
                        android:id="@+id/tb_day_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:stateListAnimator="@null"
                        android:background="@drawable/bg_toggle_selector_date"
                        android:layout_marginTop="@dimen/dimen8"
                        android:layout_marginStart="@dimen/dimen4"
                        android:layout_marginBottom="@dimen/dimen12"
                        android:layout_marginEnd="@dimen/dimen12"
                        android:textOn="S"
                        android:textOff="S"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:text="Target Harian"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_layout_light"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_show_daily_goal_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_title"
                        android:textColor="@color/black"
                        android:text="Target"/>
                    <TextView
                        android:id="@+id/tv_daily_goal_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_arrow_right_daily_goal_picker"
                        android:textColor="@color/black"
                        android:text="Duration"/>
                    <ImageView
                        android:id="@+id/img_arrow_right_daily_goal_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/view_separator_daily_target"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#F3F3F3" />
                <RelativeLayout
                    android:id="@+id/layout_show_duration_or_repeat_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/tv_label_show_duration_or_repeat_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_title"
                        android:textColor="@color/black"
                        android:text="Durasi"/>
                    <TextView
                        android:id="@+id/tv_value_duration_or_repeat_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_arrow_right_show_diration_or_repeat_layout"
                        android:text="15m"/>
                    <ImageView
                        android:id="@+id/img_arrow_right_show_diration_or_repeat_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:text="Atur Waktu"/>
            <LinearLayout
                android:id="@+id/layout_parent_set_time_picker"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_layout_light"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_do_at_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/font_title"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Lakukan Pada"/>
                    <TextView
                        android:id="@+id/tv_do_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_arrow_right_set_time"
                        android:textColor="@color/black"
                        android:text="08:00"/>
                    <ImageView
                        android:id="@+id/img_arrow_right_set_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/view_separator_set_time"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="#F3F3F3" />
                <Switch
                    android:id="@+id/sw_activate_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_title"
                    android:text="Aktifkan Pengingat"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dimen8"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:layout_marginEnd="@dimen/dimen16"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:text="Selesai Pada"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_layout_light"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_show_end_on_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Tanggal Terakhir"/>
                    <TextView
                        android:id="@+id/tv_end_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_toLeftOf="@+id/img_arrow_right_end_on"
                        android:text="12 Oktober 2122"/>
                    <ImageView
                        android:id="@+id/img_arrow_right_end_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_new_habit"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:text="Simpan" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>