<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Base application theme. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/accent_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#009688</item>
        <item name="colorSecondaryVariant">@color/pink_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>


